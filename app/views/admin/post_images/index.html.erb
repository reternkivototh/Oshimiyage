<h3>投稿一覧</h3>

<%= form_with model: @post_image, url: admin_post_images_path do |f| %>
  <% @post_images.each do |post_image| %>
    <%= post_image.id %>
    <%= post_image.name %>
    <%= image_tag post_image.get_image(40, 30) %>
    <%= post_image.user.name %>
    <% post_image.tags.each do |tag| %>
     <%= tag.name %>
    <%end%>
    <%= post_image.created_at.strftime('%Y/%m/%d') %>

    <%= link_to "詳細", admin_post_image_path(post_image.id) %>
  <% end %>
<% end %>
