<%= form_with model: @post_image, url: admin_post_images_path do |f| %>
<div class="container-fluid">
  <div class="row">
    <div class="offset-md-2">
      <h5 class="d-inline-block ml-5 my-4 bg-light">　投稿一覧　</h5>
    </div>
    <table class="table col-8 offset-2 mb-5">
      <thead class="bg-light">
        <tr>
          <th>投稿ID</th>
          <th col="2">おみやげ名</th>
          <th></br></th>
          <th>画像</th>
          <th col="2">タグ</th>
          <th>投稿者</th>
          <th>投稿時間</th>
          <th><br></th>
        </tr>
      </thead>
      <tbody>
        <% @post_images.each do |post_image| %>
          <tr>
            <td><%= post_image.id %></td>
            <td col="2">
              <%= post_image.name %>
            </td>
            <td></br></td>
            <td><%= image_tag post_image.get_image(40, 30) %></td>
            <td col="2">
              <% post_image.tags.each do |tag| %>
                <%= tag.name %>
              <% end %>
            </td>
            <td><%= post_image.user.name %></td>
            <td><%= post_image.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= link_to "詳細", admin_post_image_path(post_image.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<% end %>

<%= paginate @post_images %>
