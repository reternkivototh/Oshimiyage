<%= form_with model: @user, url: admin_user_path do |f| %>
<div class="container px-5 px-sm-0 mt-3">
  <div class="row">
    <div class="offset-md-1 pb-5 mb-5">
      <h5 class="d-inline-block my-4 bg-light">　<%= @user.name %>さんの会員詳細　</h5>
      <table class="table table-sm table-borderless">
        <tr>
          <td><%= f.label "会員ID" %></td>
          <td><%= @user.id %></td>
          <td><br></td>
        </tr>
        <tr>
          <td><%= f.label "プロフィール画像" %></td>
          <td><%= image_tag @user.get_profile_image(100, 100) %></td>
        </tr>
        <tr>
          <td><%= f.label "名前" %></td>
          <td><%= @user.name %></td>
          <td><br></td>
        </tr>
        <tr>
          <td><%= f.label "メールアドレス" %></td>
          <td><%= @user.email %></td>
          <td><br></td>
        </tr>
        <tr>
          <td><%= f.label "お住まいの都道府県" %></td>
          <td><%= @user.prefecture %></td>
          <td><br></td>
        </tr>
        <tr>
          <td><%= f.label "性別" %></td>
          <td><%= @user.gender_i18n %></td>
          <td><br></td>
        </tr>
        <tr>
          <td><%= f.label "生年月" %></td>
          <td><%= @user.birth_year %>年<%= @user.birth_month %>月</td>
          <td><br></td>
        </tr>
        <tr>
          <td><%= f.label "会員ステータス" %></td>
          <td><%= @user.is_deleted? ? '無効' : '有効' %></td>
          <td><br></td>
        </tr>
        <tr>
          <td><br></td>
          <td><%= link_to "編集する", edit_admin_user_path, class: "btn btn-success rounded btn-sm mx-auto" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
<% end %>
