<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="index">
        <% if @post_images.present? %>
        <% search_word = params[:q][:tags_name_eq] %>
          <%= render 'public/shared/posts', post_images: @post_images %>
        <% else %>
          <div class="result mt-3 h4">検索結果がありません。他のキーワードでお試しください。</div>
        <% end %>
      </div>
      <div class="paginate m-5">
        <%= paginate @post_images %>
      </div>
    </div>
  </div>
</div>
