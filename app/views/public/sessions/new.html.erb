<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user, url: user_session_path do |f| %>

  <div class="container px-5 px-sm-0 mt-3">
    <div class="row">
      <div class="col-10 offset-1 pb-5 mb-5">
        <h5 class="d-inline-block mt-4 mb-2 bg-light">　ログイン　</h5></br>
        <h6 class="d-inline-block my-4 ml-5 bg-light">　会員の方はこちらからログイン　</h6>
          <table class="col-8 offset-2 table table-sm table-borderless">
            <tr>
              <td><%= f.label "メールアドレス" %></td>
              <td colspan="2"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-10" %></td>
              <td><br></td>
            </tr>
            <tr>
              <td><%= f.label "パスワード" %></td>
              <td colspan="2"><%= f.password_field :password, autocomplete: "current-password", class: "col-10" %></td>
              <td><br></td>
            </tr>
            <tr>
              <td><br></td>
              <td><%= f.submit "ログイン", class: "btn btn-primary rounded btn-sm d-grid gap-2 col-4 mx-auto mt-4" %></td>
            </tr>
          </table>

        <h6 class="d-inline-block my-4 ml-5 bg-light">　会員登録がお済みでない方　</h6>
        <div class="col-8 offset-2">
          <p><%= link_to "こちら", new_user_registration_path %>  から新規登録を行ってください。</p>
        </div>

        <h6 class="d-inline-block my-4 ml-5 bg-light">　閲覧のみ利用する方　</h6>
        <div class="col-8 offset-2">
          <p><%= link_to "こちら", public_users_guest_sign_in_path, method: :post %>  からゲストログインを行ってください。</p>
        </div>
      </div>
    </div>
  </div>
<% end %>

